<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.szxkbl.gdmulti.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="SonNam : "/>

        <EditText
            android:id="@+id/id_sonNam"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="SonAge : "/>

        <EditText
            android:id="@+id/id_SonAge"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="FatNam : "/>

        <EditText
            android:id="@+id/id_FatNam"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="FatAge : "/>

        <EditText
            android:id="@+id/id_FatAge"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/id_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#55caca"
        android:text="add"/>

    <Button
        android:id="@+id/id_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#55caca"
        android:text="deldete"/>

    <Button
        android:id="@+id/id_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#55caca"
        android:text="update"/>

    <Button
        android:id="@+id/id_query"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#55caca"
        android:text="query"/>


</LinearLayout>
